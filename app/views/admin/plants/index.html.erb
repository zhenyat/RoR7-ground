<h1><%= t Plant.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th><%= Plant.human_attribute_name(:name) %></th>
      <th><%= Plant.human_attribute_name(:colors) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.colors %></td>
        <td><%= render 'admin/shared/index_buttons', resource: plant %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_plant_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
