<h1><%= t Bank.model_name.human(count: 2) %></h1>
<table class='table table-hover'>
  <thead>
      <th><%= Bank.human_attribute_name(:name) %></th>
      <th><%= Bank.human_attribute_name(:title) %></th>
      <th><%= Bank.human_attribute_name(:bic) %></th>
      <th><%= Bank.human_attribute_name(:url) %></th>
      <th><%= Bank.human_attribute_name(:comment) %></th>
      <th><%= t 'status.status' %></th>
      <th><%= t 'actions.actions' %><th>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.name %></td>
        <td><%= bank.title %></td>
        <td><%= bank.bic %></td>
        <td><%= bank.url %></td>
        <td><%= bank.comment %></td>
        <td><%= status_mark bank.status %></td>
        <td><%= render 'admin/shared/index_buttons', resource: bank %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class='row'>
  <div class='col-md-2'>
    <%= link_to t('actions.create'), new_admin_bank_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
